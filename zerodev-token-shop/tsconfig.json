{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": { "@/*": ["src/*"] }
  },
  "include": [
    "./scripts/**/*.ts",
    "./test/**/*.ts",
    "./src/types/typechain/**/*.ts",
    "./deployments/**/*.json",
    "./hardhat.config.ts"
  ],
  "exclude": ["node_modules"]
}
